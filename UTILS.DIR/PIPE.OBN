MODULE Pipe; (* pipe input to output *)
IMPORT Streams;
VAR byte: BYTE;
BEGIN
  ASSERT( Streams. input # NIL);
  ASSERT( Streams.output # NIL);
  WHILE NOT Streams.End(Streams.input) DO
    Streams.Read (Streams. input, byte);
    Streams.Write(Streams.output, byte);
  END;
  Streams.Close(Streams.output);
END Pipe.
